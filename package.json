{
  "name": "windups",
  "version": "1.1.6",
  "private": false,
  "description": "A typewriter effect library for React.",
  "author": "Sam Gwilym <gwilym@me.com>",
  "license": "MIT",
  "homepage": "https://windups.gwil.co",
  "repository": "github:sgwilym/windups",
  "keywords": [
    "windup",
    "typewriter effect",
    "react",
    "hooks"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "yarn eslint './src/**/*.ts' './src/**/*.tsx'",
    "build": "rollup -c",
    "prepare": "yarn run build",
    "example": "parcel ./src/example.html"
  },
  "dependencies": {
    "break-styled-lines": "^1.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "parcel": "^1.12.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.38.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.1",
    "react-dom": "^16.8.0 || ^17.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "./dist/",
      "./node_modules/"
    ]
  }
}
